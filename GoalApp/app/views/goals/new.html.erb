<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label>Title<br>
    <input type="text" name="goal[title]" value="">
  </label><br><br>

  <label>Details<br>
    <textarea name="goal[details]" rows="8" cols="80"></textarea>
  </label><br><br>

  <label>Private?
    <input type="checkbox" name="goal[private]">
  </label>

  <label>Completed?
    <input type="checkbox" name="goal[completed]">
  </label>
  <input type="submit" value="Add a Goal">
</form>
